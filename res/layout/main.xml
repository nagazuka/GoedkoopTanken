<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="#000000">

	<TextView android:id="@+id/logo" android:text="@string/app_name"
		android:textSize="14pt" android:gravity="center_horizontal"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:padding="3dip" android:textColor="#ffffff"
		android:layout_weight="1" />

	<ImageView android:id="@+id/splash" android:src="@drawable/gas_pump"
		android:layout_weight="1" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:scaleType="center"/>

	<Button android:id="@+id/gpsButton" android:text="@string/gpsButton_text"
		android:textSize="12pt" android:gravity="center_horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:drawableLeft="@drawable/satellite_icon"
		android:drawablePadding="3dip" android:padding="10dip"
		android:layout_margin="10dip" />
